{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "skipLibCheck": true,
    "preserveSymlinks": true
  },
  "include": [
    "src/**/*",
    "util/**/*"
  ],
  "exclude": [
    "test",
    "**/*.spec.ts",
    "**/*.spec-setup.ts"
  ]
}
